<header>
  
    <nav>
  <div class="container">
    <%= link_to 'My Blog', users_path, :class => 'navbar-brand"' %>
      <ul>
        

        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'Home', users_path, :class => 'nav-link' %>
          </li>
          <li class="nav-item">
          <%= link_to 'Profile', user_path(current_user.id)%>
          </li>
          <li class="nav-item">
          <%= link_to 'New Post', new_post_path, :class => 'nav-link' %>
          </li>
          <li>
          <%= button_to 'Log Out', destroy_user_session_path, 'method': :delete %>
          </li>

        <% else %>

          <li class="nav-item">
          <%= link_to 'Sign Up', new_user_registration_path, :class => 'nav-link' %>
          </li>
          <li class="nav-item">
          <%= link_to 'Sign in', new_user_session_path, :class => 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
  
</header>
