<li>

  <a href="/users/<%= @user.id %>/posts/<%= post.id %>">
    <div>
      <h4><%= post.title %></h4>

      <p><%= post.text %></p>

      <div>
        <button type="button">
          Comments:
          <span>
            <%= post.comments_counter  ? post.comments_counter : 0 %>
          </span>
        </button>
        <button type="button" disable>
          Likes:
          <span>
            <%= post.likes_counter ? post.likes_counter  : 0 %>
          </span>
        </button>
      </div>

      <h4> Comments </h4>
  
      <ul>
        <% if post.comments.length > 0 %>
          <% post.comments.each do |comment| %>
          <li><%= comment.user.name %> : <%= comment.text %></li>
          <% end %>
        <% else %>
          <li>No comments</li>
        <% end %>
      </ul>
      
    </div>
  </a>
</li>